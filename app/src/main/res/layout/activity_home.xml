<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Home">

    <ImageView
        android:id="@+id/songicon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/circularsong1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/favicon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/fav1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        />

    <ImageView
        android:id="@+id/mostplay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/mostplayed"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        />
    <ImageView
        android:id="@+id/recentplay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/recentplayicon"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="220dp"
        />

    <ImageView
        android:id="@+id/creatplay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/playlistadd"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/playlistv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/playlistview"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="220dp"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="120dp"
        android:text="SONGS"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="210dp"
        android:text="FAVOURITES"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"
        android:text="MOST PLAYED"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="180dp"
        android:textAlignment="center"
        android:text="RECENTLY PLAYED"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:text="ADD PLAYLIST"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="215dp"
        android:textAlignment="center"
        android:text="PLAYLIST"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/ratebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="RATE US"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/feedbackbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:text="GIVE FEEDBACK"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>